{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}


{{!-- blog posts --}} 
<div class="w-full md:w-1/3 p-4">           
    <div class="h-full bg-white rounded-3xl">
        <img class="w-full rounded-t-3xl" src="https://images.unsplash.com/photo-1548783094-f92d7c8ae2d3?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxMTc3M3wwfDF8c2VhcmNofDh8fGdlcm1hbnl8ZW58MHx8fHwxNjgxMzI0MzAx&ixlib=rb-4.0.3&q=80&w=2000" alt=""/>
        <div class="p-8">
            {{#primary_tag}}
                <span class="">{{name}}</span>
            {{/primary_tag}}
            <h3 class="font-heading text-2xl text-gray-900 hover:text-gray-700 group-hover:underline font-black">
                {{#unless access}}
                    {{^has visibility="public"}}
                        {{#unless feature_image}}
                            {{> "icons/lock"}}
                        {{/unless}}
                    {{/has}}
                {{/unless}}
            {{title}}
            </h3>

            {{#if excerpt}}
                <p>{{excerpt}}</p>
            {{/if}}
            <br>
            <p class="text-sm text-gray-500 font-bold"> <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
                    &bull; 
                    {{#if reading_time}}
                    <span class="">{{reading_time}}</span>
                {{/if}}
                {{#if @site.comments_enabled}}
                    {{comment_count}}
                {{/if}}
            </p>
        </div>
    </div>
</div>

                    
                    
                   