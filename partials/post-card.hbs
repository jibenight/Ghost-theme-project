
{{!-- blog posts --}} 
    <article class="post-card w-full  md:w-1/2 lg:w-1/3 p-4">
        <a href="{{url}}">          
            <div class=" h-full bg-white rounded-3xl">
                <img class="w-full h-48 object-cover rounded-t-3xl"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 1000px) 400px, 800px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                />
                <div class="p-8">
                    {{#primary_tag}}
                        <span class="text-lg font-bold" style="color:{{@site.accent_color}};">{{name}}</span>
                    {{/primary_tag}}
                    <h3 class="font-heading text-2xl text-slate-800 hover:text-slate-600 group-hover:underline font-black">
                        {{#unless access}}
                            {{^has visibility="public"}}
                                {{#unless feature_image}}
                                    {{> "icons/lock"}}
                                {{/unless}}
                            {{/has}}
                        {{/unless}}
                    {{title}}
                    </h3>

                    {{#if excerpt}}
                        <p class="text-slate-600 hidden lg:block">
                            {{excerpt characters="200"}}...
                            <a href='{{url}}'>
                                <span style="color:{{@site.accent_color}};" class="hover:opacity-75">Read Article</span>
                            </a>
                        </p>

                    {{/if}}
                    <br>
                    <p class="text-sm text-slate-500 italic"> <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
                            &bull; 
                            {{#if reading_time}}
                            <span class="">{{reading_time}}</span>
                        {{/if}}
                        {{#if @site.comments_enabled}}
                            {{comment_count}}
                        {{/if}}
                        
                    </p>
                </div>
            </div>
        </a>
    </article>
    



                    
                    
                   