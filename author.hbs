{{!< default}}

{{#author}}
<div class="container mx-auto {{#if cover_image}} bg-[url('{{img_url cover_image size="xl"}}')] bg-cover rounded-3xl bg-center {{/if}}">
    <div class="2xl:flex mb-4 {{#if cover_image}} py-16 px-10{{/if}} overflow-hidden rounded-3xl"> 
        <div class="flex flex-wrap flex-col items-center {{#if cover_image}}lg:w-1/3{{else}}w-full{{/if}} p-5 bg-gray-100 rounded-3xl">
            <div class="w-auto p-4">
                {{#if profile_image}}
                    <img class="rounded-full w-40" src="{{profile_image}}" alt="{{name}}">
                {{else}}
                    <img class="rounded-full w-40" src="/partials/icons/avatar.svg" alt="{{name}}">
                {{/if}}
            </div>
            <div class="flex-1 p-4">
                <div class="flex flex-col h-full">
                    <div class="flex-initial mb-4">
                        <h3 class="font-heading mb-2 text-4xl text-gray-800 font-black tracking-tight text-center">
                            {{name}}
                        </h3>
                        {{#if location}}
                            <p class="text-gray-500 flex justify-center items-center">
                                {{> "icons/map"}} {{location}}
                            </p>
                        {{/if}} 
                    </div>
                    <div class="flex-initial">
                        {{#if bio}}
                            <p class="mb-8 text-gray-900 font-bold text-center">{{bio}}</p>
                        {{/if}}
                        <div class="flex flex-wrap justify-center -m-1.5">
                            {{#if website }}
                            <div class="w-auto p-1.5">
                                <a class="flex items-center justify-center w-10 h-10 bg-gray-100 rounded-full" href="{{website}}">
                                    <img src="/partials/icons/site.svg" alt="">
                                </a>
                            </div>
                            {{/if}}
                            {{#if facebook }}
                            <div class="w-auto p-1.5">
                                <a class="flex items-center justify-center w-10 h-10 bg-gray-100 rounded-full" href="{{facebook_url}}">
                                    <img src="/partials/icons/facebook.svg" alt="">
                                </a>
                            </div>
                            {{/if}}
                            {{#if twitter }}
                            <div class="w-auto p-1.5">
                                <a class="flex items-center justify-center w-10 h-10 bg-gray-100 rounded-full" href="{{twitter_url}}">
                                    <img src="/partials/icons/twitter.svg" alt="">
                                </a>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>
{{/author}}

<div class="container mx-auto mt-5">
    <div class="py-16 px-8 bg-gray-100 rounded-3xl">
        {{#author}} 
            <div class="mb-6">
                <h2 class="italic text-center font-heading font-bold text-2xl sm:text-4xl">{{t "A collection of"}} {{plural ../pagination.total empty='zero posts' singular='% post' plural='% posts'}}</h2>
            </div>
        {{/author}}
        <div class="flex flex-wrap -m-4 mb-6">
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</div>
         
 
