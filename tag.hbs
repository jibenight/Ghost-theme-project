{{!< default}}

{{#tag}}
<div class="container mx-auto {{#if feature_image}} bg-[url('{{img_url feature_image size="xl"}}')] bg-cover rounded-3xl bg-center {{/if}}">
    <div class="2xl:flex mb-4 {{#if feature_image}} py-16 px-10{{/if}} overflow-hidden rounded-3xl"> 
        <div class="flex  flex-wrap flex-col items-center {{#if feature_image}}lg:w-1/3{{else}}w-full{{/if}} p-5 bg-gray-100 rounded-3xl">
            <div class="flex-1 p-4">
                <div class="flex flex-col h-full">
                    <div class="flex-initial {{#unless description}} w-full {{/unless}} ">
                        <h3 class="font-heading m-2 text-4xl text-gray-800 font-black tracking-tight text-center">
                            {{name}}
                        </h3>
                    </div>
                    {{#if description}}
                    <div class="flex-initial">
                        <p class="text-gray-900 font-bold text-center">{{description}}</p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div> 
    </div>
</div>
{{/tag}}

<div class="container mx-auto mt-5">
    <div class="py-16 px-8 bg-gray-100 rounded-3xl">
        {{#tag}} 
            <div class="mb-6">
                <h2 class="italic text-center font-heading font-bold text-2xl sm:text-4xl">{{t "A collection of"}} {{plural ../pagination.total empty='zero posts' singular='% post' plural='% posts'}}</h2>
            </div>
        {{/tag}}
        <div class="flex flex-wrap -m-4 mb-6">
            <h2></h2>
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</div>
         
 


